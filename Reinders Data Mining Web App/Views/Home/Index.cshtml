<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reinders, Inc</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/core.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/home.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap.css")" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-2.1.4.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/fabric.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Library.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/View.js")"></script>
</head>
<body>
    <section id="navigationsection">
        <div id="navigationwrapper" class="form-inline">
            <div class="form-group"><button id="backwards" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i></button></div>
            <div class="form-group"><button id="forwards" class="btn btn-default"><i class="glyphicon glyphicon-chevron-right"></i></button></div>
            <div class="form-group"><button id="refresh" class="btn btn-default"><i class="glyphicon glyphicon-refresh"></i></button></div>
            <div id="urlwrapper" class="form-group has-feedback">
                <input id="urlinput" type="text" class="form-control" spellcheck="false"/>
                <span id="success" class="glyphicon glyphicon-ok form-control-feedback"></span>
                <span id="failure" class="glyphicon glyphicon-remove form-control-feedback"></span>
            </div>
        </div>
    </section>
    <section id="iframesection">
        <div id="iframewrapper">
            <iframe id="targetframe"></iframe>
            <canvas id="elementhighlighter">This web application requires a HTML5 compatible browser</canvas>
            <div id="elementselector"></div>
        </div>
    </section>
    <section id="filtersection">
        <div id="filterwrapper">
            <div class="third">
                <div id="customisation">
                    <div id="selectorwrapper" class="form-inline">
                        <input type="hidden" id="selectorlevel">
                        <div class="form-group">
                            <label id="levellabel" for="level">Selector:</label>
                        </div>
                        <div class="form-group">
                            <button id="minusone" class="btn btn-default"><i class="glyphicon glyphicon-minus"></i></button>
                        </div>
                        <div class="form-group fullwidth">
                            <input id="selector" type="text" class="form-control fullwidth" spellcheck="false" readonly />
                        </div>
                        <div class="form-group">
                            <button id="plusone" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i></button>
                        </div>
                    </div>
                    <div id="actionwrapper" class="form-inline"> <!--maybe make it so that the inputs go under the title instead of inline-->
                        <div class="form-group">
                            <label for="action">Action:</label>
                        </div>
                        <div class="form-group fullwidth">
                            <select class="form-control fullwidth" id="action">
                                <option value="0">Grab</option>
                                <option value="1">Ignore</option>
                                <option value="2">Click</option>
                            </select>
                        </div>
                    </div>
                    <div id="columnwrapper" class="form-inline">
                        <!--maybe make it so that the inputs go under the title instead of inline-->
                        <div class="form-group">
                            <label for="column">Column:</label>
                        </div>
                        <div class="form-group fullwidth">
                            <input id="column" type="text" class="form-control fullwidth" spellcheck="false"/>
                        </div>
                    </div>
                    <div id="requiredwrapper" class="form-inline">
                        <div class="form-group">
                            <label for="required">Required:</label>
                        </div>
                        <div class="form-group fullwidth">
                            <input id="required" type="checkbox" class="form-control"/>
                        </div>
                    </div>
                </div>
                <button id="delete" class="btn btn-default">Delete Event</button>
                <button id="record" class="btn btn-default">Record Event</button>
            </div>
            <div class="vr"></div>
            <div id="midfiltersection" class="third">

                <div id="titlewrapper" class="form-inline">
                    <!--maybe make it so that the inputs go under the title instead of inline-->
                    <div class="form-group">
                        <label for="title">Title:</label>
                    </div>
                    <div class="form-group fullwidth">
                        <input id="title" type="text" class="form-control fullwidth" spellcheck="false" />
                    </div>
                    <div class="form-group">
                        <button id="savefilters" class="btn btn-default">Save</button>
                    </div>
                </div>
                <div id="filtercontainer">
                </div>
            </div>
            <div class="vr"></div>
            <div class="third">
                <div id="clustercontainer">
                </div>

                @using (Html.BeginForm("FileUpload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))// be aware, null check this
                {
                    <input class="btn-sm" name="uploadFile" type="file" />
                            <input class="btn btn-default btn-sm" type="submit" value="Upload & Scrape" />
                }
            </div>
        </div>
    </section>
</body>
</html>